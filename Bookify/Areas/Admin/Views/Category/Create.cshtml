@{
    ViewData["Title"] = "Category Create";
}

@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Create Category</h2>
        </div>
    </div>
</div>
<div class="card-body p-4">
    <form method="post" class="row">
        <div class="border p-3">
            @*  <div asp-validation-summary="All"></div>  *@ <!-- All yazdigimizda, tum hata mesajlari ustte alt alta sirali bicimde gosterir -->
            <div class="form-floating py-2 col-12">
                <input asp-for="Name" class="form-control border-0 shadow"/>
                <label asp-for="Name" type="text" class="ms-2"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="DisplayOrder" class="form-control border-0 shadow"/>
                <label asp-for="DisplayOrder" class="ms-2"> </label>
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>

            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-dark form-control">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark form-control">Back to List</a>
                </div>
            </div>


        </div>
    </form>
</div>


<!-- Asagidaki kod sayesinde validasyon islemi sayfa yenilenmese bile otomatik ve eszamanli olarak calisacaktir.  -->
